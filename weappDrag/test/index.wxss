/* test/test.wxss */
.outer{
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.inner{
  width: 100%;
  height: 100%;
}
movable-area{
  width: 100%;
  height: 100%;
}
.item{
  position: relative;
  font-size: 50rpx;
  margin: 20rpx 0;
  display: inline-block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  box-shadow: 0 0 5rpx 5rpx rgba(0, 0, 0, .1);
  text-align: center;
}
.item text{
  display: inline-block;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  border-radius: 50rpx;
  background: rgba(0, 0,0, .2);
}
.item-box{
  display: inline-block;
  width: 100%;
  height: 100rpx;
}
.item-move{
  display: inline-block;
  width: 100%;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 0 5rpx 5rpx rgba(0, 0, 0, .1);
}
